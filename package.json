{
  "name": "coding-platform-backend",
  "version": "1.0.0",
  "description": "Coding platform backend with JWT auth, Prisma, and PostgreSQL",
  "main": "server.js",
  "type": "module",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
